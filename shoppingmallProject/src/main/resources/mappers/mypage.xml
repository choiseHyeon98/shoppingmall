<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        
<mapper namespace = "mapper.mypage">

	<!-- 테이블 컬럼, VO 1:1로 매핑했을때 이름이 다른 경우 -->
	<resultMap id="mypageResult" type="MemberVO">
		<result property = "id" column="id" />
		<result property = "pw" column="pw" />
		<result property = "name" column="name" />
		<result property = "phone" column="phone" />
		<result property = "address" column="address" />
		<result property = "email" column="email" />
		<result property = "joinDate" column="joinDate" />

	</resultMap>
	
	<select id ="showMyInfo" resultMap="mypageResult" >
	<![CDATA[
		SELECT "id", "pw", "name", "phone", "address", "email", "rank", "joinDate"
		FROM MEMBER
	]]>
	</select>
	
	<update id ="updateMyInfo" parameterType="MemberVO" >
	<![CDATA[
		UPDATE MEMBER SET "name"=#{name}, "phone"=#{name}, "address"=#{name}, "email"=#{name}, "rank"=${rank} WHERE "id"=${id}
		
	]]>
	</update>
	
	<select id ="showMyCart" resultMap="mypageResult" >
	<![CDATA[
		SELECT "cartNum", "id", "proNum", "sizeOption", "colorOption", "price", "countProNum"
		FROM CART
	]]>
	</select>
	
	<select id ="showMyOrderList" resultMap="mypageResult" >
	<![CDATA[
		SELECT "orderNum", "proNum", "id", "sizeOption", "colorOption", "tprice", "delNum", "payment", "cancleOrder", "delStatus", "orderDate"
		FROM ORDERLIST
	]]>
	</select>
	
	<insert id ="insertMyReview" parameterType="ReviewVO" >
	<![CDATA[
		INSERT INTO REVIEW
		("reviewNum", "id", "proNum", "reviewPhoto", "reviewContent", "reviewDate")
		VALUES(0, '', 0, '', '', sysdate )
	]]>
	</insert>
	
	
</mapper>